{
    "manifest_version": 3,
    "name": "Football Team Score Tracker",
    "version": "1.0",
    "description": "Displays football scores in a popup",
    "action": {
      "default_popup": "index.html",
      "default_icon": "icon32.png"
    },
    "permissions": [
      "storage",
      "alarms"
    ],
    "host_permissions": [
      "https://api.football-data.org/"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    }
}
