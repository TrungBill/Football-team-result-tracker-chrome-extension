{
    "manifest_version": 3,
    "name": "PitchPulse",
    "version": "1.0",
    "description": "Displays your favorite team past results, upcoming fixture and league position in a popup",
    "action": {
      "default_popup": "index.html",
      "default_icon": "icon.png"
    },
    "permissions": [
      "storage",
      "alarms"
    ],
    "host_permissions": [
      "https://api.football-data.org/"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    }
}
